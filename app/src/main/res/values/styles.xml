<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="backArrow">
        <item name="android:width">42dp</item>
        <item name="android:height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="toolbarMenu">
        <item name="icon">@drawable/menulist</item>
        <item name="android:colorPrimary">@color/AfavourColor</item>
        <item name="android:background">@color/AfavourColor</item>
        <item name="android:color">@color/Unselected</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/AfavourColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="starFull">#fcdb03</color>
    <color name="starEmpty">#b8b8b8</color>
    <color name="tecxtColor">#FF424242</color>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/starEmpty</item>
        <item name="colorControlActivated">@color/starFull</item>
    </style>

    <style name="AppThemee" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- ....... -->
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
