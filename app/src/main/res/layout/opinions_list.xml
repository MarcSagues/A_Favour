<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp" >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="62dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/imageicon"
                android:src="@drawable/abc_btn_radio_material"
                card_view:srcCompat="@drawable/example_person"></ImageView>

            <TextView
                android:id="@+id/tv_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/iv_image"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="Title of opinion"></TextView>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_text"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/iv_image"
                tools:text="blah blah blah......"></TextView>

            <RatingBar
                android:id="@+id/stars"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-42dp"
                android:contentDescription="@string/stars"
                android:max="5"
                android:rating="3.5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:theme="@style/RatingBar"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/tv_text" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>