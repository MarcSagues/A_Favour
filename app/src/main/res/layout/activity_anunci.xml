<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <TextView
                    android:id="@+id/uploadtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@color/AfavourColor"
                    android:gravity="center"
                    android:text="@string/uploadFavour"
                    android:textAllCaps="true"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/Unselected"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/selectCategory"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#2CFF3B5B"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/daytoday"
                            android:layout_width="114dp"
                            android:layout_height="112dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/roundborders"
                            android:clickable="true"
                            android:contentDescription="@string/imageicon"
                            android:focusable="auto"
                            android:padding="5dp"
                            app:srcCompat="@drawable/daytodaythings" />

                        <TextView
                            android:id="@+id/daytoday_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:autoSizeMaxTextSize="18dp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:gravity="center|top"
                            android:lines="1"
                            android:text="@string/daytoday"
                            android:textColor="@color/tecxtColor"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/favourxfavour"
                            android:layout_width="114dp"
                            android:layout_height="112dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/roundborders"
                            android:clickable="true"
                            android:contentDescription="@string/imageicon"
                            android:focusable="auto"
                            android:padding="5dp"
                            app:srcCompat="@drawable/handshacke" />

                        <TextView
                            android:id="@+id/favourxfavour_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:gravity="center|top"
                            android:lines="1"
                            android:text="@string/favourxfavour"
                            android:textColor="@color/tecxtColor"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/computing"
                            android:layout_width="114dp"
                            android:layout_height="112dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/roundborders"
                            android:clickable="true"
                            android:contentDescription="@string/imageicon"
                            android:focusable="auto"
                            android:padding="5dp"
                            app:srcCompat="@drawable/computing" />

                        <TextView
                            android:id="@+id/computing_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:autoSizeMaxTextSize="18dp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:gravity="center|top"
                            android:lines="1"
                            android:text="@string/computing"
                            android:textColor="@color/tecxtColor"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/reparation"
                            android:layout_width="114dp"
                            android:layout_height="112dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/roundborders"
                            android:clickable="true"
                            android:contentDescription="@string/imageicon"
                            android:focusable="auto"
                            android:padding="5dp"
                            app:srcCompat="@drawable/reparation" />

                        <TextView
                            android:id="@+id/reparation_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:autoSizeMaxTextSize="18dp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:gravity="center|top"
                            android:lines="1"
                            android:text="@string/reparations"
                            android:textColor="@color/tecxtColor"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/others"
                            android:layout_width="114dp"
                            android:layout_height="112dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/roundborders"
                            android:clickable="true"
                            android:contentDescription="@string/imageicon"
                            android:focusable="auto"
                            android:padding="5dp"
                            app:srcCompat="@drawable/others" />

                        <TextView
                            android:id="@+id/others_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:autoSizeMaxTextSize="18dp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="end"
                            android:gravity="center|top"
                            android:lines="1"
                            android:text="@string/others"
                            android:textColor="@color/tecxtColor"
                            android:textSize="24sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/titleCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                tools:text="50" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:maxLength="50" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/descCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:maxLength="600" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/amountCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amount_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount"
                    android:inputType="number"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/fab_margin"
                android:background="@color/AfavourColor"
                android:text="@string/upload"
                android:textColor="@color/design_default_color_on_primary" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>